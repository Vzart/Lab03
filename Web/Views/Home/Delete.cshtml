@model Repository.Entities.Post

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Delete Post</h1>

<h3>Are you sure you want to delete this post?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">@Model.Title</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Content:</dt>
        <dd class="col-sm-10">@Model.Content</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Publish Status:</dt>
        <dd class="col-sm-10">@Model.PublishStatus</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.PostCategory.CategoryName</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PostId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
