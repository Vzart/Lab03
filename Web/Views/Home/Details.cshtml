@model Repository.Entities.Post

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<h1>Post Details</h1>

<div>
    <h4>Title: @Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Content:</dt>
        <dd class="col-sm-10">@Model.Content</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Publish Status:</dt>
        <dd class="col-sm-10">@Model.PublishStatus</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.PostCategory!.CategoryName</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Created Date:</dt>
        <dd class="col-sm-10">@Model.CreatedDate</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Updated Date:</dt>
        <dd class="col-sm-10">@Model.UpdatedDate</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-secondary">Edit</a>
</div>
